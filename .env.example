PYTHONPATH=./src

# Application settings
LOG_LEVEL=INFO
DEBUG_MODE=false

# API Keys (optional - never commit actual keys)
# Use a secure secrets management solution in production
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here
GOOGLE_API_KEY=your_google_key_here
PERPLEXITY_API_KEY=your_perplexity_key_here
BRAVE_API_KEY=your_brave_key_here
GITHUB_TOKEN=your_github_token_here

# Database
ARANGO_HOST=http://localhost:8529
ARANGO_USER=root
ARANGO_PASSWORD=openSesame

# Service URLs
GRANGER_HUB_URL=http://localhost:8000
LLM_CALL_URL=http://localhost:8001
TEST_REPORTER_URL=http://localhost:8002
REDIS_URL=redis://redis:6379
CLAUDE_PROXY_URL=http://claude-proxy:3010

# Feature flags
ENABLE_RL_ROUTING=true
ENABLE_LLM_VALIDATION=true
ENABLE_WORKER_POOL=false

# Default models
LITELLM_DEFAULT_MODEL=gpt-3.5-turbo
LITELLM_SUMMARIZATION_MODEL=vertex_ai/gemini-2.5-flash-preview-05-20

# Security settings
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60
ENABLE_API_KEY_AUTH=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Docker security
DOCKER_CONTENT_TRUST=1
